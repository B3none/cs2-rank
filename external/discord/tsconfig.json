{
  "include": [
    "src/**/*.*"
  ],
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "ES2021"
    ],
    "allowJs": true,
    "strictNullChecks": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "moduleResolution": "node",
    "typeRoots": [
      "./src/@types/",
      "./node_modules/@types/"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "rootDir": "src",
    "outDir": "dist"
  }
}